# =============================================================================
# SAMPLE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in the actual values
# Never commit actual environment values to version control

# -----------------------------------------------------------------------------
# Core App Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# -----------------------------------------------------------------------------
# Platform Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_MOBILE=false

# -----------------------------------------------------------------------------
# Backend API Configuration  
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# -----------------------------------------------------------------------------
# Web3Auth Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WEB3AUTH_CLIENT_ID=your_web3auth_client_id_here

# -----------------------------------------------------------------------------
# Solana Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_WSS_URL=wss://api.devnet.solana.com

# Note: Fee payer management is handled by the backend for security.
# No private keys or sensitive data should be stored in frontend configuration.